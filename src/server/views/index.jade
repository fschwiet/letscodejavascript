extends _layout

block content
    - if (!isAuthenticated)
        fieldset
            legend
                span Read your google RSS feeds at asimplereader.com
            ol 
                li 
                    include loginButton
                    |  with your google account.
                li Import your feeds.
                li And you are done!
    - if (typeof feeds !== "undefined")
        
        fieldset 
            div.js-topContainer

        fieldset
            legend Newest Posts
            div.js-postsContainer
                each post in posts
                    include post

        - var pageState = "<script> window.subscribedFeeds = " + JSON.stringify(feeds) + "; </script>"
        | !{pageState}
